<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/myaccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.25"
            android:text="@string/payment"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="34sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="28dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/login"
        android:layout_marginTop="200dp"
        android:orientation="vertical">



        <android.support.design.widget.TextInputLayout
            android:id="@+id/id_email_registration"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp"
            app:boxStrokeColor="@color/colorPrimary"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/id_text_email_registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:hint="Number credit card"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/id_password_registration"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:boxStrokeColor="@color/colorPrimary"
            app:errorEnabled="true"
            app:passwordToggleDrawable="@drawable/show_password_selector"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/colorGrey">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/id_text_password_registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Credit card holder"
                android:inputType="text" />

        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/id_numberphone_registration"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:boxStrokeColor="@color/colorPrimary"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/id_text_numberphone_registration"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:hint="Expiration date"
                android:inputType="date" />
        </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/id_numberphone_registration2"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="120dp"
                android:layout_toEndOf="@+id/id_numberphone_registration"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="64dp"
                android:layout_marginBottom="8dp"
                android:layout_alignParentEnd="true"
                app:boxStrokeColor="@color/colorPrimary"
                app:errorEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/id_text_numberphone_registration2"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:hint="CVV"
                    android:inputType="date" />
            </android.support.design.widget.TextInputLayout>


        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/register_registration"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/button"
                android:fontFamily="sans-serif-condensed-medium"
                android:enabled="false"
                android:text="Pay"
                android:textColor="@color/colorBlack" />




        </LinearLayout>
    </LinearLayout>

</RelativeLayout>