<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.depeat">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:usesCleartextTraffic="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".ui.activities.activities.SplashscreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.activities.activities.LoginActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name=".ui.activities.activities.CheckoutActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".ui.activities.activities.ShopActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".ui.activities.activities.RegisterActivity"/>
        <activity android:name=".ui.activities.activities.MainActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".ui.activities.activities.ProfileActivity"
            android:theme="@style/AppTheme"/>
    </application>

</manifest>